<UserControl x:Class="Joserras.Client.Torneo.View.KnockoutsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Joserras.Client.Torneo.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<CollectionViewSource x:Key="jugadores" Source="{Binding Jugadores}"/>
	</UserControl.Resources>
	
		<DataGrid ItemsSource="{Binding Kos}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridComboBoxColumn Header="Jugador" DisplayMemberPath="Nombre"
																ItemsSource="{Binding Source={StaticResource jugadores}}"
																SelectedItemBinding="{Binding Jugador}"/>
			<DataGridComboBoxColumn Header="Eliminado" DisplayMemberPath="Nombre"
															ItemsSource="{Binding Source={StaticResource jugadores}}"
															SelectedItemBinding="{Binding Eliminado}">
			</DataGridComboBoxColumn>
				<DataGridTextColumn Header="Mano" Binding="{Binding Mano}" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>
</UserControl>
