<UserControl x:Class="Joserras.Client.Torneo.View.TorneoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Joserras.Client.Torneo.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

	<Border Height="auto">
		<Grid Height="auto" VerticalAlignment="Top">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="70"/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Label>FECHA</Label>
			<DatePicker SelectedDate="{Binding Fecha}" Height="auto" Grid.Row="1"/>

			<Label Grid.Column="1">BUYIN</Label>
			<TextBox Text="{Binding PrecioBuyin}" Width="60" Height="auto" Grid.Row="1" Grid.Column="1"/>

			<Label Grid.Column="2">TIPO</Label>
			<ComboBox ItemsSource="{Binding TournamentTypes}" SelectedItem="{Binding Tipo}" Grid.Row="1" Grid.Column="2"/>

			<Label Grid.Column="3">LIGA</Label>
			<CheckBox IsChecked="{Binding Liga}" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="7,0,0,0"/>

		</Grid>
	</Border>

</UserControl>